name: Pull, Retag, and Push Images from ios-mcn-ran

on:
  workflow_dispatch:
    inputs:
      ran-build-uni_version:
        description: 'Version tag for ran-build-uni (e.g., release-0.0.10)'
        required: true
        default: 'v0.1.4.rc3'
      ran-build-fhi72-uni_version:
        description: 'Version tag for ran-build-fhi72-uni (e.g., release-0.0.6)'
        required: true
        default: 'v0.1.4.rc3'
      ran-gnb-uni_version:
        description: 'Version tag for ran-gnb-uni (e.g., release-0.0.4)'
        required: true
        default: 'v0.1.4.rc3'
      ran-gnb-fhi72-uni_version:
        description: 'Version tag for ran-gnb-fhi72-uni (e.g., release-0.0.5)'
        required: true
        default: 'v0.1.4.rc3'
      ios-mcn-nr-ue-dist_version:
        description: 'Version tag for ios-mcn-nr-ue-dist (e.g., release-0.0.4)'
        required: true
        default: 'v0.1.4.rc3'
     

jobs:
  pull_and_push_images:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v2

      - name: Set up Docker
        uses: docker/setup-buildx-action@v2

      - name: Log in to GitHub Container Registry
        uses: docker/login-action@v2
        with:
          registry: ghcr.io
          username: ${{ github.actor }}
          password: ${{ secrets.GHCR_TOKEN }}

     
      - name: Pull, Retag, and Push all Images from ios-mcn-core
        run: |
          
          declare -A RAN_PACKAGES
          CORE_PACKAGES=(
            ["ran-build-uni"]="${{ github.event.inputs.ran-build-uni_version }}"
            ["ran-build-fhi72-uni"]="${{ github.event.inputs.ran-build-fhi72-uni_version }}"
            ["ran-gnb-uni"]="${{ github.event.inputs.ran-gnb-uni_version }}"
            ["ran-gnb-fhi72-uni"]="${{ github.event.inputs.ran-gnb-fhi72-uni_version }}"
            ["ios-mcn-nr-ue-dist"]="${{ github.event.inputs.ios-mcn-nr-ue-dist_version }}"
            
          )
          
          
          for PACKAGE in "${!RAN_PACKAGES[@]}"; do
            VERSION=${RAN_PACKAGES[$PACKAGE]}
            SOURCE_IMAGE="ghcr.io/ios-mcn-ran/${PACKAGE}:${VERSION}"
            TARGET_IMAGE="ghcr.io/ios-mcn/${PACKAGE}:${VERSION}"  
            echo "Pulling ${SOURCE_IMAGE}..."
            docker pull ${SOURCE_IMAGE}
            echo "Retagging ${SOURCE_IMAGE} to ${TARGET_IMAGE}..."
            docker tag ${SOURCE_IMAGE} ${TARGET_IMAGE}
            echo "Pushing ${TARGET_IMAGE}..."
            docker push ${TARGET_IMAGE}
          done
