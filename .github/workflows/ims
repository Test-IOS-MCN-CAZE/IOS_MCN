name: Pull, Retag, and Push Images from ios-mcn-ims

on:
  workflow_dispatch:
    inputs:
      n5_version:
        description: 'Version tag for n5 (e.g., release-0.0.10)'
        required: true
        default: 'release-0.0.1'
      cscf_version:
        description: 'Version tag for cscf (e.g., release-0.0.6)'
        required: true
        default: 'release-0.1.3.rc1'
      
     

jobs:
  pull_and_push_images:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v2

      - name: Set up Docker
        uses: docker/setup-buildx-action@v2

      - name: Log in to GitHub Container Registry
        uses: docker/login-action@v2
        with:
          registry: ghcr.io
          username: ${{ github.actor }}
          password: ${{ secrets.GHCR_TOKEN }}

     
      - name: Pull, Retag, and Push all Images from ios-mcn-core
        run: |
          
          declare -A CORE_PACKAGES
          CORE_PACKAGES=(
            ["n5"]="${{ github.event.inputs.n5_version }}"
            ["cscf"]="${{ github.event.inputs.cscf_version }}"
            
            
          )
          
          
          for PACKAGE in "${!IMS_PACKAGES[@]}"; do
            VERSION=${IMS_PACKAGES[$PACKAGE]}
            SOURCE_IMAGE="ghcr.io/ios-mcn-ims/${PACKAGE}:${VERSION}"
            TARGET_IMAGE="ghcr.io/ios-mcn/${PACKAGE}:${VERSION}"  
            echo "Pulling ${SOURCE_IMAGE}..."
            docker pull ${SOURCE_IMAGE}
            echo "Retagging ${SOURCE_IMAGE} to ${TARGET_IMAGE}..."
            docker tag ${SOURCE_IMAGE} ${TARGET_IMAGE}
            echo "Pushing ${TARGET_IMAGE}..."
            docker push ${TARGET_IMAGE}
          done
